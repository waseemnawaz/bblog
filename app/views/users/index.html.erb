<p id="notice"><%= notice %></p>

<div class="container-fluid anchor">
  <div class="new">
    <h1>The Makers</h1>
  </div>
 
  <div class="row" id="productos">
    <% @users.each do |user| %>
    <div class="col-md-4">
      <p><%= user.first_name %></p>
      <p><%= user.last_name %></p>
      <p><%= user.title %></p>
      <p><%= user.content %></p>
      <!--p><%#= link_to user.link, url_for(user.link), :target => '_blank' %></p-->
      <p><%= link_to 'My website', url_for(user.link), :target => '_blank' %></p>
      <p><%#= link_to(image_tag(user.image_url, class: "img-responsive"), user) if user.image_url %><!--/a--></p>
      <p><%= link_to(image_tag(user.image_url, class: "img-responsive"), user) unless user.image_url.blank? %><!--/a--></p>
      <p><%#= user.image_url %><!--/a--></p>
      <p><%= link_to 'Show', user %></p>
      <p><%= link_to 'Edit', edit_user_path(user) %></p>
      <p><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
    <% end %> 
  </div>
</div>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.title %></td>
        <td><%= user.content %></td>
        <td><%= user.image_url %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

