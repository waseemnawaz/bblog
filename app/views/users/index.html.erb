<p id="notice"><%= notice %></p>

<div class="container-fluid anchor">
  <div class="new">
    <h1>The Makers</h1>
  </div>
 
  <div class="row" id="productos">
    <% @users.each do |user| %>
    <div class="col-md-4">
      <!--p><%#= user.first_name %></p>
      <p><%#= user.last_name %></p-->
      <p><%= user.title %></p>
      <!--p><%#= user.content %></p>
      <p><%#= link_to 'My website', url_for(user.link), :target => '_blank' %></p-->
      <p><%= link_to(image_tag(user.image_url, class: "img-responsive"), user) unless user.image_url.blank? %></p>
      <% if user_signed_in? %>
        <p><%= link_to 'Show', user %></p>
        <p><%= link_to 'Edit', edit_user_path(user) %></p>
        <p><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %> 
    </div><!-- /col -->
    <% end %> 
  </div>
  <br>
  <% if user_signed_in? %>
    <%= link_to 'New User', new_user_path %>
  <% end %> 
</div>

